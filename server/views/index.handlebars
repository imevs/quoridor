{{#if games.length}}
{{else}}
    <h1>Create your game board: </h1>
    <hr>
{{/if}}

<div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Offline game (state is not stored on server)
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a href="/playLocal/playersCount/2">2 players</a>
        </li>
        <li>
            <a href="/playLocal/playersCount/4">4 players</a>
        </li>
        <li>
            <a href="/playLocal/playersCount/2/bots/1">Play with computer</a>
        </li>
    </ul>
</div>
<div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Multiplayer game with another human
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a href="/create/playersCount/2">2 players</a>
        </li>
        <li>
            <a href="/create/playersCount/4">4 players</a>
        </li>
    </ul>
</div>
<div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Custom game (select human or bot for each player)
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a href="/new/playersCount/2">2 players</a>
        </li>
        <li>
            <a href="/new/playersCount/4">4 players</a>
        </li>
    </ul>
</div>
<div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Bots battle
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a href="/createGameWithBots/playersCount/2">2 players</a>
        </li>
        <li>
            <a href="/createGameWithBots/playersCount/4">4 players</a>
        </li>
    </ul>
</div>

{{#if games.length}}
    <h1>Active games</h1>
{{/if}}

<div id="games">
    {{#each games}}
        <hr>
        <div><strong>Game created</strong>: {{createDate}}</div>
        <div><strong>Players count (active/all)</strong>: {{players.length}} / {{playersCount}}</div>
        {{#if isNotBusy }}
            <a class="btn btn-large btn-primary" href="/play/game/{{id}}">Join the game</a>
        {{/if}}
    {{/each}}
</div>
